@{
    ViewBag.Title = "Oficinas";
    Layout = "~/Views/Shared/_emptyLayout.cshtml";
    var entityName = "Oficinas";
    var tab1Title = string.Format("Lista {0}", entityName);
    var tab2Title = string.Format("Nuevo/Editar {0}", entityName);
}
@section MainContent{
    <h2>@ViewBag.Title</h2>
    <p>
        <a href="#" role="button" class="btn btn-success" onclick="javascript:reloadCreate(); return false;">Nuevo</a>
        <a href="#bulkDelete" role="button" data-toggle="modal" class="btn btn-delete btn-danger btn-toogle"
           onclick="javascript:bulkDelete('tblOffices', 'Offices'); return false;">Borrar</a>
    </p>
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tblOffices">
        <thead>
        </thead>
        <tbody></tbody>
    </table>
}
@section JavaScript
{
    <script type="text/javascript">
        $(document).ready(function () {

            initPages('Offices', '@entityName', '@tab1Title', '@tab2Title');
            Reload();
        });

        var columns = [
                { "sTitle": "<input type='checkbox' name='selectAll' id='selectAll' onclick='javascript:selectAllAjax(\"tblOffices\");' />", "bSortable": false, "sWidth": "35px", "bSearchable": false },
                { "sTitle": 'Nombre', "bSortable": true }
        ]

        function Reload() {
            loadTableContentAjax("tblOffices", "/Offices/GetAll", columns);
        }

    </script>
}