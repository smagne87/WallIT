    <div class="navbar-primary">
        <nav class="navbar navbar-static-top" role="navigation">
            <a class="brand" href="/">WallIT | Backend - Admin</a>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-user-profile">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!-- Collect the nav links, forms, and other content for toggling -->
            @*<div class="collapse navbar-collapse" id="navbar-user">*@
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Welcome, <span class="text-capitalize">User!</span> <span class="caret"></span></a>
                    <ul class="dropdown-menu account-dropdown" role="menu">
                        @*<li><a href="@Url.Action("Index", "Reports")">Reports</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Account")">Moderate</a></li>
