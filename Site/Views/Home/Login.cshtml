@model WallIT.Web.Models.BackendLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = Request.IsAjaxRequest() || ViewContext.Controller.ControllerContext.IsChildAction ? "~/Views/Shared/_emptyLayout.cshtml" : "~/Views/Shared/_MasterLogin.cshtml";
}
@section Javascript{
}
@section MainContent{
    <div class="container-fluid">
        <div class="row">
            <div id="loginBox" class="col-md-4 col-md-offset-4 well">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-horizontal">
                        <div id="errorPlaceHolder" style="display: none;">
                            @Html.ValidationSummary()
                            <a class="close" data-dismiss="alert" href="#">×</a>Error Message
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email", id = "email" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", id = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="input-group">
                                    <p style="text-align: center">
                                        @Html.EditorFor(model => model.RememberMe) Remember Me
                                    </p>
                                </div>
                            </div>
                        </div>
                        <button type="submit" name="submit" class="btn btn-success btn-block clickedButton">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
}
